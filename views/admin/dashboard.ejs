<div class="admin-title">
    <h2>Postagens</h2>
    <a href="/add-post" class="button">+ Nova Postagem</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
        
        <li>

            <a href="/post/<%= post.id %>">

                <%= post.title %> &nearr;

            </a>
            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn">Editar</a>

                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Deletar" class="btn-delete btn">
                </form>

            </div>
        </li>
     
    <% }) %>
</ul>